{
    "compilerOptions": {
      "incremental": false,
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./",
      "baseUrl": "./",
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/boot/database/db_connect.js", "src/boot/setup.js", "src/index.js"],
    "exclude": ["node_modules"]
  }